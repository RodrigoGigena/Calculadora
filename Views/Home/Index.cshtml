@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/my_style.css" />
<div class="text-center">
    <h1 class="jumbotron">Calculadora en Html1</h1>
    @*------Texto Box Resultado-------*@

    <div id="DivPrincipal">

        <div class="row">
            <div class="col-8">
                <input type="text" id="txtResultadoId" />
            </div>
        </div>

        @*--------PRIMERA_LINEA_DE_NUMEROS--------*@
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(7)">7</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(8)">8</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(9)">9</button>
            </div>
            <div class="col-2">
                <button class="MybotonOperador" onclick="Operar('-')">-</button>
            </div>
        </div>
        @*-------SEGUNDA_LINEA_DE_NUMEROS-------*@
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(4)">4</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(5)">5</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(6)">6</button>
            </div>
            <div class="col-2">
                <button class="MybotonOperador" onclick="Operar('+')">+</button>
            </div>
        </div>
        @*--------TERCERA_LINEA_DE_NUMEROS--------*@
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(1)">1</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(2)">2</button>
            </div>
            <div class="col-2">
                <button class="MybotonCalculadora" onclick="MostrarNumero(3)">3</button>
            </div>
            <div class="col-2">
                <button class="MybotonOperador" onclick="Operar('*')">*</button>
            </div>
        </div>
        @*--------CUARTA_LINEA_DE_NUMEROS--------*@
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-4">
                <button class="Mybotoncero" onclick="MostrarNumero(0)">0</button>
            </div>
            <div class="col-2">
                <button class="MybotonOperador" onclick="Operar('/')">/</button>
            </div>
            <div class="col-2">
                <button class="MybotonOperador" onclick="Operar('=')">=</button>
            </div>
        </div>

    </div>


</div>

<script>

    var textResultado = document.getElementById("txtResultadoId");
    var resultado = 0;
    var operador = null;

    function MostrarNumero(numero) {
        this.textResultado.value += numero;
    }

    function Operar(operador) {
        if (this.operador !== null) {

            switch (this.operador) {
                case "+":
                    this.resultado += Number.parseInt(textResultado.value)
                    this.operador = null;
                    break;
                case "-":
                    this.resultado -= Number.parseInt(textResultado.value)
                    this.operador = null;
                    break;
                case "X":
                    this.resultado *= Number.parseInt(textResultado.value)
                    this.operador = null;
                    break;
                case "/":
                    this.resultado /= Number.parseInt(textResultado.value)
                    this.operador = null;
                    break;
                case "=":      
                    break;
            }
        }

        else {

            this.resultado = parseInt(textResultado.value);
            this.operadorIngresado = operador;
            this.textResultado.value = "";
        }
       
    }

</script>